#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "");
	cout << "статистика последовательности" << endl;
	cout << "0 - суммирование чисел и подсчет их количества" << endl;
	int num = 1;
	int sum = 0;
	int count = 0;
	while (num != 0) {
		cout << "введи число: ";
		cin >> num;
		count++;
		sum += num;
	}
	cout << "сумма чисел: " << sum << endl;
	cout << "количество введенных чисел: " << count - 1 ;

	return 0;
}
