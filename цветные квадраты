#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "");
	int mapsize;
	char texture = '#';
	cout << "введи размер карты: ";
	cin >> mapsize;

	for (int x = 0; x < mapsize; x++) {
		for (int y = 0; y < mapsize; y++) {
			if (x < mapsize/2 and y < mapsize/2) {
				cout << "\x1b[96m #\x1b[0m";
			}
			else if (x < mapsize/2 and y >= mapsize/2) {

				cout << "\x1b[93m #\x1b[0m";
			}
			else if (x >= mapsize/2 and y < mapsize/2) {
				cout << "\x1b[94m #\x1b[0m";
			}
			else if (x>= mapsize/2 and y>= mapsize/2) {
				cout << "\x1b[95m #\x1b[0m";
			}

		}

		cout << endl;
	}

	return 0;
}
