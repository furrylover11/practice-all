#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "");
	int numchoice = 1;
	float count = 1;
	float sum = 0;
	cout << "среднее арифмитическое чисел" << endl;
	while (numchoice != 0) {
		cout << "введи число: ";
		cin >> numchoice;
		sum += numchoice;
		count++;

	}
	count = count - 2;
	cout << "среднее арифмитическое чисел:" << sum / count;
	return 0;
}
